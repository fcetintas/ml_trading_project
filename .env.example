# Binance API Configuration
# Get these from https://testnet.binance.vision/ for testnet
# or https://www.binance.com/en/my/settings/api-management for live trading
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_SECRET_KEY=your_binance_secret_key_here

# News API Keys (Multiple Sources for Better Coverage)
# Primary: CryptoPanic API - https://cryptopanic.com/developers/api/
CRYPTOPANIC_API_KEY=your_cryptopanic_api_key_here

# Secondary Sources (Optional but recommended for redundancy):
# NewsAPI - https://newsapi.org/ (Free: 1000 requests/month)
NEWSAPI_KEY=your_newsapi_key_here

# CryptoCompare News - https://min-api.cryptocompare.com/ (Free tier available)
CRYPTOCOMPARE_KEY=your_cryptocompare_key_here

# Messari API - https://messari.io/api (Professional crypto data)
MESSARI_KEY=your_messari_key_here

# Trading Configuration
# Set to 'false' for live trading (USE WITH EXTREME CAUTION!)
USE_TESTNET=true

# Optional: Override default trading parameters
# MAX_TRADE_AMOUNT=10.0
# SENTIMENT_THRESHOLD_BUY=0.6
# SENTIMENT_THRESHOLD_SELL=-0.6
# CONFIDENCE_THRESHOLD=0.6
# TRADE_INTERVAL=300

# Optional: Logging configuration
# LOG_LEVEL=INFO
# LOG_FILE=trading_bot.log

# Telegram Bot Notifications (Optional)
# Get bot token from @BotFather on Telegram
# Get chat ID by sending /start to @userinfobot
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id_here